<section class="sectionContainer mb-3">
  <div class="topContainer">
    <h2>Blog</h2>
    <p>Ready to stay up to date? Take look through some of my blog posts!</p>
    <a href="blogpost-form" class="btn btn-primary">Add Blog Post</a>
  </div>
  {{#if blog.length}}
    {{#each blog}}
      <div class="card mb-2">
        <div class="card-header">
          <div class="card-title h5">{{title}}</div>
          <div class="card-subtitle text-gray">{{date}}</div>
        </div>
        <div class="card-body">
          {{description}}
        </div>
        <div class="card-footer">
          <a href="/blog-users/{{id}}" class="btn btn-primary">Read</a>
          <button class="btn">Edit</button>
          <button class="btn warningButton">Delete</button>
        </div>
      </div>
    {{/each}}
  {{/if}}
</section>