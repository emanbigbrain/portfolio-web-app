<section class="sectionContainer">
  <form action="/delete-blogpost/{{blog.id}}" method="POST">
    <input class="btn warningButton" type="submit" value="Delete" />
  </form>
  <a href="/update-blogpost/{{blogpost.id}}" class="btn btn-primary">Update</a>
  <h2>{{blogpost.title}}</h2>
  <aside class="mb-2"><strong>{{blogpost.date}}</strong></aside>
  <p>{{blogpost.content}}</p>
</section>