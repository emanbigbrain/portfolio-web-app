<section class="sectionContainer">
  <h2>Update Your Guestbook Entry</h2>
  <form action="/update-guestbook/{{guestbookEntry.id}}" method="POST">
    <label class="form-label" for="input-name">Name</label>
    <input
      class="form-input"
      type="text"
      id="input-name"
      placeholder="Your name"
      name="name"
      value="{{guestbookEntry.name}}"
    />
    <label class="form-label" for="input-comment">Comment</label>
    <textarea
      class="form-input mb-2"
      id="input-name"
      placeholder="Write a comment here"
      name="comment"
    />{{guestbookEntry.comment}}</textarea>
    <input class="btn btn-primary" type="submit" value="Update">
  </form>
</section>